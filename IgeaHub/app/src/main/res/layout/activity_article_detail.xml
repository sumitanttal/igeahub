<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="handler" type="com.sumit.igeahub.activity.ArticleDetailActivity"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@drawable/header_bg_small"
            >
            <ImageView
                android:id="@+id/drawer_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:onClick="actionBack"
                android:layout_centerVertical="true"
                android:padding="@dimen/acticity_default_margin_10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_18sp"
                android:fontFamily="sans-serif-bold"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                />

        </RelativeLayout>
        <RelativeLayout
           style="@style/App_Theme_Style_MM">
            <ImageView
               android:id="@+id/article_image"
                style="@style/App_Theme_Style_MW"
                />
            <WebView
                android:id="@+id/webview"
                style="@style/App_Theme_Style_MM"
                android:layout_below="@+id/article_image"
                android:layout_above="@+id/footer"
                android:descendantFocusability="blocksDescendants"
                ></WebView>
                <LinearLayout
                    android:id="@+id/footer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:weightSum="3">
                    <TextView
                       android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1 views"
                        />
                    <TextView
                        android:id="@+id/comments"
                        android:onClick="actionComments"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                       android:text="comments"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Luca dezzani"/>
                </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</layout>